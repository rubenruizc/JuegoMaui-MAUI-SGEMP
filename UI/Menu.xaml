<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UI.Menu"
             Title="Menu"
             BackgroundImageSource="fondo2.jpg">
    
    <ContentPage.Resources>
        <Style x:Key="CustomButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="30" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="HeightRequest" Value="100" />
            <Setter Property="WidthRequest" Value="300" />
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#4A90E2" Offset="0.0" />
                        <GradientStop Color="#1C3D5A" Offset="1.0" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderColor" Value="White" />
            <Setter Property="BorderWidth" Value="2" />
        </Style>
    </ContentPage.Resources>

    <AbsoluteLayout>

        <!-- Contenido Principal -->
        <ScrollView AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1">
            <VerticalStackLayout
                Padding="30,0"
                Spacing="25"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="CenterAndExpand">

                <Label
                    Text="COWBOY"
                    FontSize="60"
                    HorizontalTextAlignment="Center"
                    TextColor="White"
                    FontFamily="Serif"
                    FontAttributes="Bold"
                    VerticalOptions="Center">
                    <Label.Shadow>
                        <Shadow Brush="Black" Opacity="0.8" Offset="2,2" />
                    </Label.Shadow>
                </Label>

                <Button
                    x:Name="Jugar"
                    Text="JUGAR" 
                    Style="{StaticResource CustomButtonStyle}"
                    Clicked="EmpezarJuego" />

                <Button
                    x:Name="Ajustes"
                    Text="AJUSTES" 
                    Style="{StaticResource CustomButtonStyle}" />
            </VerticalStackLayout>
        </ScrollView>

        <!-- Etiqueta en la parte inferior izquierda -->
        <Label
            Text="Ruben Ruiz CastaÃ±o"
            TextColor="White"
            FontSize="20"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            AbsoluteLayout.LayoutBounds="0,1,AutoSize,AutoSize"
            Margin="10,10,20,12"/>

        <Image
            Source="espana.png"
            HeightRequest="70"
            WidthRequest="70"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            AbsoluteLayout.LayoutBounds="1,1,AutoSize,AutoSize"
            Margin="10,10,20,0"
            
            >

        </Image>

    </AbsoluteLayout>

</ContentPage>